<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GDGMMMUT" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/google_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/google_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/google_yellow</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorError">@color/google_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/google_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.GDGMMMUT.Splash" parent="Theme.GDGMMMUT">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CardStyle.Small">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/google_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/google_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Styles -->
    <style name="HeadlineText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/google_blue</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
